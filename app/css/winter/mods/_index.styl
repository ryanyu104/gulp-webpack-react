.center-block
  width: 1100px
  margin: 0 auto
  text-align: center
  clearfix()
  h2
    font-size: 5vw
  div
    background: white
    color: red
    clearfix()
  p
    span(1/3)
    line-height: 1.8
    background: linear-gradient(top, white, black)
  img
    width: 400px
    display: inline-block
  .img-box
    width: 300px
    height: 267px
    border-radius(100px)
    display: inline-block
    background: url('{{{img/about.jpg}}}')
    background-size: cover
    transform: rotate(7deg)
